<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/len_2"
    android:layout_marginTop="@dimen/len_2"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/len_12"
    android:paddingEnd="@dimen/len_16"
    android:paddingStart="@dimen/len_16"
    android:paddingTop="@dimen/len_12">

    <com.example.common.common.widget.PortraitView
        android:id="@+id/im_portrait"
        android:layout_width="@dimen/portraitSize"
        android:layout_height="@dimen/portraitSize"
        android:layout_gravity="start|center_vertical"
        android:src="@drawable/default_portrait" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/len_24"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="@dimen/len_12"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/black"
        android:textSize="@dimen/fontNameSize"
        tools:text="@string/app_name" />

    <!--<ImageView-->
        <!--android:id="@+id/im_follow"-->
        <!--android:layout_width="@dimen/len_52"-->
        <!--android:layout_height="@dimen/len_28"-->
        <!--android:layout_gravity="end|center_vertical"-->
        <!--android:contentDescription="@string/app_name"-->
        <!--android:padding="@dimen/len_2"-->
        <!--android:tint="@color/white_alpha_208" />-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_contact"
        android:layout_width="@dimen/len_52"
        android:layout_height="@dimen/len_28"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="@string/lable_add_contact"
        android:textAppearance="?android:textAppearanceButton"
        android:insetBottom="0dp"
        app:backgroundTint="@color/my_colorAccent"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:cornerRadius="10dp"
        app:rippleColor="@color/black_alpha_48" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/added_contact"
        android:layout_width="@dimen/len_52"
        android:layout_height="@dimen/len_28"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="@string/lable_added_contact"
        android:textAppearance="?android:textAppearanceButton"
        android:insetBottom="0dp"
        app:backgroundTint="@color/black_alpha_32"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:cornerRadius="10dp"
        app:rippleColor="@color/black_alpha_96"
        android:visibility="gone"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_contact_error"
        android:layout_width="@dimen/len_52"
        android:layout_height="@dimen/len_28"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="@string/lable_added_error"
        android:textAppearance="?android:textAppearanceButton"
        android:insetBottom="0dp"
        app:backgroundTint="@color/red_a700"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:cornerRadius="10dp"
        app:rippleColor="@color/black_alpha_96"
        android:visibility="gone"/>
</LinearLayout>